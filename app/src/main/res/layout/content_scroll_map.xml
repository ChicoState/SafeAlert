<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Map.BuddiiView.ScrollMapBuddii"
    tools:showIn="@layout/activity_scroll_map">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/UserHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onHomeClick"
            android:text="Home"
            app:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/UserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onUserClick"
            android:text="Info"
            app:backgroundTint="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".33"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:onClick="onChatClick"
            app:srcCompat="@android:drawable/sym_action_chat" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ScrollingActivity"
        tools:showIn="@layout/activity_scroll_map">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/BuddiiTabHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search" />

                <Button
                    android:id="@+id/reportButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BuddiiTabUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_do_eiusmod_tempor_incididunt_ut_labore_et_dolore_magna_aliqua_duis_at_tellus_at_urna_condimentum_odio_aenean_sed_adipiscing_diam_donec_adipiscing_eget_lorem_dolor_sed_viverra_ipsum_vitae_tempus_quam_pellentesque_nec_nam_duis_ultricies_lacus_sed_turpis_tincidunt_id_mauris_cursus_mattis_molestie_a_iaculis_at_erat_pellentesque_vitae_tortor_condimentum_lacinia_quis_vel_eros_dui_ut_ornare_lectus_sit_amet_est_amet_volutpat_consequat_mauris_nunc_congue_nisi_vitae_suscipit_tellus_velit_egestas_dui_id_ornare_lacus_viverra_vitae_congue_eu_consequat_ac_felis_donec_faucibus_pulvinar_elementum_integer_enim_neque_volutpat_ac_sit_amet_est_placerat_in_nulla_facilisi_etiam_dignissim_diam_quis_enim_lobortis_scelerisque_fermentum_faucibus_scelerisque_eleifend_donec_pretium_vulputate_sapien_nec_sagittis_aliquam_diam_vel_quam_elementum_pulvinar_commodo_nulla_facilisi_nullam_vehicula_nunc_consequat_interdum_varius_sit_magna_fermentum_iaculis_eu_non_diam_phasellus_vestibulum_lorem_sed_lobortis_feugiat_vivamus_at_augue_eget_arcu_dictum_varius_posuere_ac_ut_consequat_semper_viverra_nam_volutpat_est_velit_egestas_dui_id_ornare_etiam_tempor_orci_eu_lobortis_elementum_nibh_enim_praesent_elementum_facilisis_leo_vel_rhoncus_mattis_rhoncus_urna_neque_viverra_in_arcu_cursus_euismod_quis_viverra_nibh_pellentesque_nec_nam_aliquam_sem_et_erat_nam_at_lectus_urna_adipiscing_commodo_elit_at_imperdiet_dui_accumsan_sit_elit_scelerisque_mauris_pellentesque_pulvinar_pellentesque_habitant_morbi_maecenas_volutpat_blandit_aliquam_etiam_erat_velit_scelerisque_in_aliquam_etiam_erat_velit_scelerisque_elementum_sagittis_vitae_et_leo_duis_adipiscing_at_in_tellus_integer_feugiat_scelerisque_varius_morbi_tortor_posuere_ac_ut_consequat_semper_elit_sed_vulputate_mi_sit_nunc_vel_risus_commodo_viverra_maecenas_accumsan_lacus_vel_facilisis_consequat_ac_felis_donec_et_odio_pellentesque_diam_volutpat_commodo_ultrices_tincidunt_arcu_non_sodales_neque_sodales_ut_sit_amet_purus_gravida_quis_blandit_consectetur_adipiscing_elit_ut_aliquam_purus_sit_egestas_congue_quisque_egestas_diam_in_in_nibh_mauris_cursus_mattis_viverra_accumsan_in_nisl_nisi_ac_odio_tempor_orci_dapibus_ultrices_in_iaculis_eget_arcu_dictum_varius_duis_at_consectetur_eu_tincidunt_tortor_aliquam_nulla_facilisi" />

                <Button
                    android:id="@+id/userDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drop User" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BuddiiTabChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
